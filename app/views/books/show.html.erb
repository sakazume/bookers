<div class="row">
  
  <div class="col-xs-3">
    <h2>User info</h2>
    <% if @user.profile_image.nil?%>
      <%= image_tag 'no-image.jpg', class: "attachment user profile_image fallback" %>
    <% else %>
      <%= attachment_image_tag @user,:profile_image, :image %>
    <%end%>
    <table class="table">
      <tbody><tr></tr> 
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
      <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench" href="<%= edit_user_path(@user) %>"></a>
    </div>

      <%= render 'books/new' %>
</div>


<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
		  <tbody><tr>
        <td>
            <a href="<%= user_path(@book.user.id) %>">
                <% if @book.user.profile_image.nil? %>
                    <%= image_tag 'no-image.jpg', class: "attachment user profile_image fallback" %>
                <% else %>
                    <%= attachment_image_tag @book.user,:profile_image, :image %>
                <% end %>
                <%= @book.user.name %>
            </a>
        </td>
        <td><a href="<%= book_path(@book.id) %>"><%= @book.title %></a></td>
        <td><%= @book.body %></td>

        <td>
            <%if @book.user.id==current_user.id%>
                <%= link_to 'Edit', edit_book_path(@book.id), class:"btn-sm btn-success" %>
            <% end %>
        </td>
        <td>
            <%if @book.user.id==current_user.id%>
                <%= link_to 'Destroy',book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn-sm btn-danger" %>
            <% end %>


        </td>
      </tr>
    </tbody></table>

</div>

</div>
