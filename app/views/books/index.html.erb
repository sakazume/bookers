<div class="row">

    <%= render 'layouts/left_info' %>

<div class="col-xs-9">
    <h2>Books</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
        <tr>
            <td>
                <a href="<%=user_path(book.user)%>" >
                    <% if book.user.profile_image.nil? %>
                        <%= image_tag 'no-image.jpg', class: "attachment user profile_image fallback" %>
                    <% else %>
                        <%= attachment_image_tag book.user,:profile_image, :image %>
                    <% end %>
                </a>
            </td>
            <td> <%= link_to book.title, book_path(book.id) %> </td>
            <td> <%= book.body %> </td>

        </tr>
    <% end %>

  </tbody>
</table>
</div>
</div>